#!/bin/bash

# Make sure native monitor is at max
# resolution
xrandr --output LVDS1 --auto

if [ "$1" == "left" ];
then
    xrandr --output DP1 --auto --left-of LVDS1
fi

if [ "$1" == "copy" ];
then
    xrandr --output DP1 --auto --same-as LVDS1
fi

if [ "$1" == "off" ];
then
    xrandr --output DP1 --off
fi

if [ "$1" == "" ];
then
    echo "Usage: monitor [left|copy|off]"
    exit
fi

# Retart I3 to get panels back
i3 restart

